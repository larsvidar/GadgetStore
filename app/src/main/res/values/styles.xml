<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditCategory">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-thick</item>
        <item name="android:textSize">@dimen/text_edit_category</item>
        <item name="android:layout_marginTop">@dimen/edit_category_margin_top</item>
    </style>

    <style name="EditDetails">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">9</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="QuantityButtons">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:textSize">@dimen/text_edit_quantity_buttons</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/textLight</item>
    </style>

</resources>
